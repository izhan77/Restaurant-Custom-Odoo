<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add checkout page template to your existing hero_section_template -->
    <template id="hero_section_template" name="Hero Section" inherit_id="website.layout">

        <!-- Set body background -->
        <xpath expr="//body" position="attributes">
            <attribute name="style">background-color: #f5f5f5;</attribute>
        </xpath>

        <!-- Main content -->
        <xpath expr="//main" position="inside">
            <div class="main-container">

                <!-- Hero section -->
                <section class="hero-wrapper">
                    <img src="/restaurant_custom/static/src/img/s10.PNG" class="hero-image" alt="Wrapper"/>
                    <div class="payment-badge">
                        <img src="/restaurant_custom/static/src/img/s11.png" alt="Payment Methods"/>
                    </div>
                </section>

                <!-- Menu navigation section -->
                <section class="menu-nav-section">
                    <div class="menu-nav-container">
                        <div class="menu-categories">
                            <a href="#" class="menu-category active">Starters</a>
                            <a href="#" class="menu-category">Salads</a>
                            <a href="#" class="menu-category">Soups</a>
                            <a href="#" class="menu-category">Burgers</a>
                            <a href="#" class="menu-category">Sandwiches</a>
                            <a href="#" class="menu-category">Steaks (Beef)</a>
                            <a href="#" class="menu-category">Steaks (Chicken)</a>
                            <a href="#" class="menu-category">Chinese</a>
                            <a href="#" class="menu-category">BBQ Platters</a>
                            <a href="#" class="menu-category">Rice Dishes</a>
                            <a href="#" class="menu-category">Seafood</a>
                            <a href="#" class="menu-category">Desserts</a>
                            <a href="#" class="menu-category">Beverages</a>
                        </div>
                    </div>
                </section>

                <div class="menu-search">
                    <input type="text" placeholder="Search for dishes..."/>
                </div>

                <section class="popular-items">
                    <div class="popular-items-header">
                        <div class="popular-items-header1">
                            <img src="/restaurant_custom/static/src/img/s12.PNG" alt="Popular"/>
                            <h1>Popular Items</h1>
                        </div>
                        <p>Most ordered right now</p>
                    </div>

                    <button class="single-menu-card">
                        <div class="menu-item-header">
                            <h3>Chicken Madbee</h3>
                        </div>
                        <p>Grilled chicken served on a bed of...</p>
                        <div class="menu-item-price">
                            <strong>From Rs. 1699</strong>
                        </div>
                    </button>
                </section>

                <!-- Menu Item Popup -->
                <div class="menu-item-popup" style="display: none;">
                    <div class="popup-content">
                        <div class="popup-header">
                            <h2>Chicken Madbee</h2>
                            <div class="popup-header-buttons">
                                <button class="share-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.50-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92s2.92-1.31 2.92-2.92-1.31-2.92-2.92-2.92z"/>
                                    </svg>
                                </button>
                                <button class="close-popup">Ã—</button>
                            </div>
                        </div>
                        <div class="popup-body">
                            <div class="popup-left">
                                <div class="popup-image">
                                    <img src="/restaurant_custom/static/src/img/s10.PNG" alt="Chicken Madbee"/>
                                </div>
                            </div>
                            <div class="popup-right">
                                <div class="popup-details">
                                    <div class="price-section">
                                        <h3>Rs. 1699</h3>
                                        <p>Grilled chicken served on a bed of flavored mandi rice and sauces</p>
                                    </div>

                                    <div class="size-options">
                                        <div class="size-option active">
                                            <label class="size-label">
                                                <input type="radio" name="size" value="regular"/>
                                                <span class="radio-custom"></span>
                                                <span class="size-text">Regular</span>
                                            </label>
                                            <span class="size-price">Rs. 1699</span>
                                        </div>
                                        <div class="size-option">
                                            <label class="size-label">
                                                <input type="radio" name="size" value="full"/>
                                                <span class="radio-custom"></span>
                                                <span class="size-text">Full</span>
                                            </label>
                                            <span class="size-price">Rs. 3299</span>
                                        </div>
                                    </div>

                                    <div class="special-instructions">
                                        <h4>Special Instructions</h4>
                                        <textarea placeholder="Please enter instructions about this item"></textarea>
                                    </div>

                                    <div class="popup-footer">
                                        <div class="quantity-controls">
                                            <button class="qty-btn minus">âˆ’</button>
                                            <span class="quantity">1</span>
                                            <button class="qty-btn plus">+</button>
                                        </div>
                                        <button class="add-to-cart">
                                            <span>Rs. 1699 Add to Cart</span>
                                            <span class="cart-arrow">â†’</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bottom Cart Bar -->
                <div class="bottom-cart-bar" style="display: none;">
                    <div class="bottom-cart-content">
                        <div class="bottom-cart-left">
                            <div class="cart-badge">
                                <span class="cart-count">1</span>
                            </div>
                            <button class="view-cart-btn">View Cart</button>
                        </div>
                        <div class="bottom-cart-right">
                            <span class="cart-total">Rs. 1954</span>
                        </div>
                    </div>
                </div>

                <!-- Cart Sidebar -->
                <div class="cart-sidebar" style="display: none;">
                    <div class="cart-sidebar-overlay"></div>
                    <div class="cart-sidebar-content">
                        <div class="cart-header">
                            <h2>Your Cart</h2>
                            <button class="close-cart-sidebar">Ã—</button>
                        </div>

                        <div class="cart-items">
                            <div class="cart-item">
                                <div class="cart-item-image">
                                    <img src="/restaurant_custom/static/src/img/s10.PNG" alt="Chicken Madbee"/>
                                </div>
                                <div class="cart-item-details">
                                    <h4>Chicken Madbee</h4>
                                    <p>(Regular)</p>
                                    <span class="cart-item-price">Rs. 1699</span>
                                </div>
                                <div class="cart-item-controls">
                                    <button class="cart-item-delete">ðŸ—‘</button>
                                    <div class="cart-quantity-controls">
                                        <button class="cart-qty-minus">-</button>
                                        <span class="cart-item-qty">1</span>
                                        <button class="cart-qty-plus">+</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="cart-suggestions">
                            <h3>+ Add more items</h3>
                            <div class="cart-suggestion-text">Popular with your order</div>
                            <div class="cart-suggestion-subtext">Customers often buy these together</div>

                            <div class="suggestion-items">
                                <div class="suggestion-item">
                                    <div class="suggestion-item-content">
                                        <span class="suggestion-price">Rs. 425</span>
                                        <span class="suggestion-name">Kababjees Cho...</span>
                                    </div>
                                    <button class="suggestion-add">+</button>
                                </div>
                                <div class="suggestion-item">
                                    <div class="suggestion-item-content">
                                        <span class="suggestion-price">Rs. 185</span>
                                        <span class="suggestion-name">Soft Drinks</span>
                                    </div>
                                    <button class="suggestion-add">+</button>
                                </div>
                            </div>
                        </div>

                        <div class="cart-footer">
                            <div class="cart-tax">
                                <span>Tax 15%</span>
                                <span>Rs. 255</span>
                            </div>
                            <button class="checkout-btn">
                                <span>Checkout</span>
                                <span class="checkout-arrow">â†’</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- NEW: CHECKOUT PAGE -->
                <div class="checkout-page" style="display: none;">
                    <div class="checkout-container">
                        <!-- Checkout Header -->
                        <div class="checkout-header">
                            <div class="checkout-header-content">
                                <button class="back-to-menu">
                                    <i class="fa fa-arrow-left"></i>
                                </button>
                                <div class="breadcrumb">
                                    <span class="breadcrumb-home">Kababjees</span>
                                    <i class="fa fa-chevron-right"></i>
                                    <span class="breadcrumb-current">Checkout</span>
                                </div>
                            </div>
                        </div>

                        <!-- Main Checkout Content -->
                        <div class="checkout-content">
                            <!-- Left Side: Customer Information -->
                            <div class="checkout-left">
                                <!-- Customer Details -->
                                <section class="customer-details-section">
                                    <h2 class="section-title">Customer Details</h2>

                                    <div class="form-row">
                                        <div class="form-group">
                                            <label for="firstName">First Name *</label>
                                            <input type="text" id="firstName" name="firstName" required=""/>
                                        </div>
                                        <div class="form-group">
                                            <label for="lastName">Last Name *</label>
                                            <input type="text" id="lastName" name="lastName" required=""/>
                                        </div>
                                        <div class="form-group">
                                            <label for="phone">Phone Number *</label>
                                            <div class="phone-input">
                                                <div class="country-code">ðŸ‡µðŸ‡° +92</div>
                                                <input type="tel" id="phone" name="phone" placeholder="3001234567"
                                                       required=""/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group" style="grid-column: 1 / -1;">
                                            <label for="email">Email Address</label>
                                            <input type="email" id="email" name="email"
                                                   placeholder="example@email.com"/>
                                        </div>
                                    </div>
                                </section>

                                <!-- Order Type -->
                                <section class="order-type-section">
                                    <h2 class="section-title">Order Type</h2>

                                    <div class="delivery-info">
                                        <i class="fa fa-motorcycle"></i>
                                        <div class="delivery-info-text">
                                            <h4>Delivery Available</h4>
                                            <p>We'll deliver your order to your doorstep. Delivery charges may apply
                                                based on your location.
                                            </p>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group" style="grid-column: 1 / -1;">
                                            <label for="address">Delivery Address *</label>
                                            <textarea id="address" name="address"
                                                      placeholder="Enter your complete address including area, street, house number"
                                                      required=""></textarea>
                                        </div>
                                    </div>
                                </section>

                                <!-- Special Instructions -->
                                <section class="special-instructions-section">
                                    <h2 class="section-title">Special Instructions</h2>
                                    <div class="form-group">
                                        <textarea id="instructions" name="instructions"
                                                  placeholder="Any special instructions for your order (e.g., extra spicy, no onions, etc.)"></textarea>
                                    </div>
                                </section>

                                <!-- Payment Methods -->
                                <section class="payment-section">
                                    <h2 class="section-title">Payment Method</h2>

                                    <div class="payment-methods">
                                        <div class="payment-option cash active" data-method="cash">
                                            <div class="payment-icon">
                                                <i class="fa fa-money-bill-wave"></i>
                                            </div>
                                            <h4>Cash on Delivery</h4>
                                            <p>Pay when your order arrives</p>
                                        </div>

                                        <div class="payment-option card" data-method="card">
                                            <div class="payment-icon">
                                                <i class="fa fa-credit-card"></i>
                                            </div>
                                            <h4>Online Payment</h4>
                                            <p>Pay securely with card</p>
                                        </div>
                                    </div>

                                    <!-- Card Payment Form (Initially Hidden) -->
                                    <div class="card-payment-form" style="display: none;">
                                        <h3>Card Information</h3>

                                        <div class="card-icons">
                                            <img src="https://cdnjs.cloudflare.com/ajax/libs/payment-icons/1.2.5/visa.svg"
                                                 alt="Visa" class="card-icon"/>
                                            <img src="https://cdnjs.cloudflare.com/ajax/libs/payment-icons/1.2.5/mastercard.svg"
                                                 alt="Mastercard" class="card-icon"/>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group" style="grid-column: 1 / -1;">
                                                <label for="cardNumber">Card Number *</label>
                                                <input type="text" id="cardNumber" name="cardNumber"
                                                       placeholder="1234 5678 9012 3456" maxlength="19"/>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group">
                                                <label for="cardName">Cardholder Name *</label>
                                                <input type="text" id="cardName" name="cardName"
                                                       placeholder="John Doe"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="expiryDate">Expiry Date *</label>
                                                <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YY"
                                                       maxlength="5"/>
                                            </div>
                                            <div class="form-group cvv-input">
                                                <label for="cvv">CVV *</label>
                                                <input type="password" id="cvv" name="cvv" placeholder="123"
                                                       maxlength="4"/>
                                                <i class="fa fa-eye cvv-toggle" onclick="toggleCVV()"></i>
                                            </div>
                                        </div>

                                        <div class="card-options">
                                            <div class="save-payment">
                                                <label>
                                                    <input type="checkbox" id="saveCard" name="saveCard"/>
                                                    <span class="checkbox-custom"></span>
                                                    Save this payment method for future orders
                                                </label>
                                            </div>

                                            <div class="payment-notice">
                                                <i class="fa fa-shield-alt"></i>
                                                <span>Your payment information is encrypted and secure</span>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>

                            <!-- Right Side: Order Summary -->
                            <div class="checkout-right">
                                <div class="order-summary">
                                    <h2 class="summary-title">Order Summary</h2>

                                    <!-- Checkout Steps -->
                                    <div class="checkout-steps">
                                        <div class="step active">
                                            <div class="step-icon">
                                                <i class="fa fa-shopping-cart"></i>
                                            </div>
                                            <div class="step-info">
                                                <div class="step-number">Step 1</div>
                                                <div class="step-label">Review</div>
                                            </div>
                                        </div>
                                        <div class="step">
                                            <div class="step-icon">
                                                <i class="fa fa-credit-card"></i>
                                            </div>
                                            <div class="step-info">
                                                <div class="step-number">Step 2</div>
                                                <div class="step-label">Payment</div>
                                            </div>
                                        </div>
                                        <div class="step">
                                            <div class="step-icon">
                                                <i class="fa fa-check"></i>
                                            </div>
                                            <div class="step-info">
                                                <div class="step-number">Step 3</div>
                                                <div class="step-label">Confirm</div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Cart Items -->
                                    <div class="checkout-cart-items">
                                        <!-- Items will be populated by JavaScript -->
                                    </div>

                                    <!-- Add More Items Button -->
                                    <button class="add-more-items">
                                        <i class="fa fa-plus"></i>
                                        Add more items to your order
                                    </button>

                                    <!-- Popular Suggestions -->
                                    <div class="popular-suggestions">
                                        <h3>
                                            Popular with your order
                                            <div class="suggestion-arrows">
                                                <button class="suggestion-prev">â€¹</button>
                                                <button class="suggestion-next">â€º</button>
                                            </div>
                                        </h3>

                                        <div class="suggestion-slider">
                                            <div class="suggestion-card">
                                                <img src="/restaurant_custom/static/src/img/s10.PNG"
                                                     alt="Chicken Cheese Burger"/>
                                                <div class="suggestion-info">
                                                    <div class="suggestion-badges">
                                                        <span class="badge new">New</span>
                                                    </div>
                                                    <h4>Chicken Cheese Burger</h4>
                                                    <p>Juicy grilled chicken with melted cheese in a soft bun</p>
                                                    <div class="suggestion-price">Rs. 899</div>
                                                </div>
                                            </div>
                                            <div class="suggestion-card">
                                                <img src="/restaurant_custom/static/src/img/s10.PNG"
                                                     alt="Beef Seekh Kabab"/>
                                                <div class="suggestion-info">
                                                    <div class="suggestion-badges">
                                                        <span class="badge new-flavor">New Flavor</span>
                                                    </div>
                                                    <h4>Beef Seekh Kabab</h4>
                                                    <p>Spiced ground beef kabab grilled to perfection</p>
                                                    <div class="suggestion-price">Rs. 649</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Promo Code Section -->
                                    <div class="promo-section">
                                        <div class="promo-notice">Have a promo code? Enter it below</div>
                                        <div class="promo-input">
                                            <input type="text" id="promoCode" placeholder="Enter promo code"/>
                                            <button class="apply-promo">Apply</button>
                                        </div>
                                    </div>

                                    <!-- Order Totals -->
                                    <div class="order-totals">
                                        <div class="total-line">
                                            <span>Subtotal</span>
                                            <span class="subtotal-amount">Rs. 1,699</span>
                                        </div>
                                        <div class="total-line">
                                            <span>Delivery Fee</span>
                                            <span class="delivery-amount">Rs. 150</span>
                                        </div>
                                        <div class="total-line">
                                            <span>Tax (15%)</span>
                                            <span class="tax-amount">Rs. 277</span>
                                        </div>
                                        <div class="total-line grand-total">
                                            <span>Total</span>
                                            <span class="grand-total-amount">Rs. 2,126</span>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <button class="place-order-btn">
                                        <span>Place Your Order</span>
                                        <i class="fa fa-arrow-right"></i>
                                    </button>

                                    <button class="cancel-return-btn">
                                        Cancel and Return to Menu
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </xpath>
    </template>
</odoo>