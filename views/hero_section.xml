<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="hero_section_template" name="Hero Section" inherit_id="website.layout">
        <!-- Remove default header -->
        <xpath expr="//header" position="replace"/>

        <!-- Set body background -->
        <xpath expr="//body" position="attributes">
            <attribute name="style">background-color: #f5f5f5;</attribute>
        </xpath>

        <!-- Main content -->
        <xpath expr="//main" position="inside">
            <div class="main-container">

                <!-- Hero section -->
                <section class="hero-wrapper">
                    <img src="/restaurant_custom/static/src/img/s10.PNG" class="hero-image" alt="Wrapper"/>
                    <div class="payment-badge">
                        <img src="/restaurant_custom/static/src/img/s11.png" alt="Payment Methods"/>
                    </div>
                </section>

                <!-- Second section below hero -->
                <!-- Menu navigation section -->
                <section class="menu-nav-section">
                    <div class="menu-nav-container">
                        <div class="menu-categories">
                            <a href="#" class="menu-category active">Starters</a>
                            <a href="#" class="menu-category">Salads</a>
                            <a href="#" class="menu-category">Soups</a>
                            <a href="#" class="menu-category">Burgers</a>
                            <a href="#" class="menu-category">Sandwiches</a>
                            <a href="#" class="menu-category">Steaks (Beef)</a>
                            <a href="#" class="menu-category">Steaks (Chicken)</a>
                            <a href="#" class="menu-category">Chinese</a>
                            <a href="#" class="menu-category">BBQ Platters</a>
                            <a href="#" class="menu-category">Rice Dishes</a>
                            <a href="#" class="menu-category">Seafood</a>
                            <a href="#" class="menu-category">Desserts</a>
                            <a href="#" class="menu-category">Beverages</a>
                        </div>
                    </div>
                </section>
                <div class="menu-search">
                    <input type="text" placeholder="Search for dishes..."/>
                </div>

                <section class="popular-items">
                    <div class="popular-items-header">
                        <div class="popular-items-header1">
                            <img src="/restaurant_custom/static/src/img/s12.PNG" alt="Popular"/>
                            <h1>Popular Items</h1>
                        </div>
                        <p>Most ordered right now</p>
                    </div>

                    <button class="single-menu-card">
                        <div class="menu-item-header">
                            <h3>Chicken Madbee</h3>
                        </div>
                        <p>Grilled chicken served on a bed of...</p>
                        <div class="menu-item-price">
                            <strong>From Rs. 1699</strong>
                        </div>
                    </button>
                </section>

                <!-- Menu Item Popup -->
                <div class="menu-item-popup" style="display: none;">
                    <div class="popup-content">
                        <div class="popup-header">
                            <h2>Chicken Madbee</h2>
                            <div class="popup-header-buttons">
                                <button class="share-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.50-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92s2.92-1.31 2.92-2.92-1.31-2.92-2.92-2.92z"/>
                                    </svg>
                                </button>
                                <button class="close-popup">Ã—</button>
                            </div>
                        </div>
                        <div class="popup-body">
                            <div class="popup-left">
                                <div class="popup-image">
                                    <img src="/restaurant_custom/static/src/img/s10.PNG" alt="Chicken Madbee"/>
                                </div>
                            </div>
                            <div class="popup-right">
                                <div class="popup-details">
                                    <div class="price-section">
                                        <h3>Rs. 1699</h3>
                                        <p>Grilled chicken served on a bed of flavored mandi rice and sauces</p>
                                    </div>

                                    <div class="size-options">
                                        <div class="size-option active">
                                            <label class="size-label">
                                                <input type="radio" name="size" value="regular"/>
                                                <span class="radio-custom"></span>
                                                <span class="size-text">Regular</span>
                                            </label>
                                            <span class="size-price">Rs. 1699</span>
                                        </div>
                                        <div class="size-option">
                                            <label class="size-label">
                                                <input type="radio" name="size" value="full"/>
                                                <span class="radio-custom"></span>
                                                <span class="size-text">Full</span>
                                            </label>
                                            <span class="size-price">Rs. 3299</span>
                                        </div>
                                    </div>

                                    <div class="special-instructions">
                                        <h4>Special Instructions</h4>
                                        <textarea placeholder="Please enter instructions about this item"></textarea>
                                    </div>

                                    <div class="popup-footer">
                                        <div class="quantity-controls">
                                            <button class="qty-btn minus">âˆ’</button>
                                            <span class="quantity">1</span>
                                            <button class="qty-btn plus">+</button>
                                        </div>
                                        <button class="add-to-cart">
                                            <span>Rs. 1699 Add to Cart</span>
                                            <span class="cart-arrow">â†’</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bottom Cart Bar (NEW) -->
                <div class="bottom-cart-bar" style="display: none;">
                    <div class="bottom-cart-content">
                        <div class="bottom-cart-left">
                            <div class="cart-badge">
                                <span class="cart-count">1</span>
                            </div>
                            <button class="view-cart-btn">View Cart</button>
                        </div>
                        <div class="bottom-cart-right">
                            <span class="cart-total">Rs. 1954</span>
                        </div>
                    </div>
                </div>

                <!-- Cart Sidebar (NEW) -->
                <div class="cart-sidebar" style="display: none;">
                    <div class="cart-sidebar-overlay"></div>
                    <div class="cart-sidebar-content">
                        <div class="cart-header">
                            <h2>Your Cart</h2>
                            <button class="close-cart-sidebar">Ã—</button>
                        </div>

                        <div class="cart-items">
                            <div class="cart-item">
                                <div class="cart-item-image">
                                    <img src="/restaurant_custom/static/src/img/s10.PNG" alt="Chicken Madbee"/>
                                </div>
                                <div class="cart-item-details">
                                    <h4>Chicken Madbee</h4>
                                    <p>(Regular)</p>
                                    <span class="cart-item-price">Rs. 1699</span>
                                </div>
                                <div class="cart-item-controls">
                                    <button class="cart-item-delete">ðŸ—‘</button>
                                    <div class="cart-quantity-controls">
                                        <button class="cart-qty-minus">-</button>
                                        <span class="cart-item-qty">1</span>
                                        <button class="cart-qty-plus">+</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="cart-suggestions">
                            <h3>+ Add more items</h3>
                            <div class="cart-suggestion-text">Popular with your order</div>
                            <div class="cart-suggestion-subtext">Customers often buy these together</div>

                            <div class="suggestion-items">
                                <div class="suggestion-item">
                                    <div class="suggestion-item-content">
                                        <span class="suggestion-price">Rs. 425</span>
                                        <span class="suggestion-name">Kababjees Cho...</span>
                                    </div>
                                    <button class="suggestion-add">+</button>
                                </div>
                                <div class="suggestion-item">
                                    <div class="suggestion-item-content">
                                        <span class="suggestion-price">Rs. 185</span>
                                        <span class="suggestion-name">Soft Drinks</span>
                                    </div>
                                    <button class="suggestion-add">+</button>
                                </div>
                            </div>
                        </div>

                        <div class="cart-footer">
                            <div class="cart-tax">
                                <span>Tax 15%</span>
                                <span>Rs. 255</span>
                            </div>
                            <button class="checkout-btn">
                                <span>Checkout</span>
                                <span class="checkout-arrow">â†’</span>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </xpath>
    </template>
</odoo>